<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyHealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryContainer">@color/secondary_200</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.MyHealth.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary_200</item>
        <item name="windowSplashScreenBackground">@color/primary_700</item>
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.MyHealth</item>
    </style>

    <style name="Theme.MyHealth.Menu" parent="Theme.MyHealth">
        <item name="android:backgroundTint">@color/primary_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>


</resources>